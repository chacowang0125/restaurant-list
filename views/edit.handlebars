<div class="container mx-auto p-4 d-flex flex-column justify-content-center align-items-center">
	<h2 class="text-center">編輯餐廳資料</h2>
	<form action="/restaurants/{{restaurants._id}}?_method=PUT" method="POST" class="mt-3 text-center">
		<div class="form-group row">
			<label for="name">餐廳名稱</label>
			<div class="col-sm-12">
				<input type="text" placeholder="餐廳名稱" name="name" class="form-control" value="{{restaurants.name}}">
			</div>
		</div>
		<div class="form-group row">
			<label for="name-en">餐廳英文名稱</label>
			<div class="col-sm-12">
				<input type="text" placeholder="餐廳英文名稱" name="name_en" class="form-control" value="{{restaurants.name_en}}">
			</div>
		</div>
		<div class="form-group row">
			<label for="category">料理類別</label>
			<div class="col-sm-12">
				<select class="form-control" id="category" name="category" value="{{restaurants.category}}">
					<option>美式</option>
					<option>義式餐廳</option>
					<option>日本料理</option>
					<option>中東料理</option>
					<option>酒吧</option>
					<option>咖啡</option>
				</select>
			</div>
		</div>
		<div class="form-group row">
			<label for="image">餐廳照片連結</label>
			<div class="col-sm-12">
				<input type="text" placeholder="http://..." name="image" class="form-control" value="{{restaurants.image}}">
			</div>
		</div>
		<div class="form-group row">
			<label for="location">餐廳地址</label>
			<div class="col-sm-12">
				<input type="text" placeholder="台北市..." name="location" class="form-control" value="{{restaurants.location}}">
			</div>
		</div>
		<div class="form-group row">
			<label for="phone">餐廳電話：</label>
			<div class="col-sm-12">
				<input type="text" placeholder="02 1234-5678" name="phone" class="form-control" value="{{restaurants.phone}}">
			</div>
		</div>
		<div class="form-group row">
			<label for="google_map">Google Map</label>
			<div class="col-sm-12">
				<input type="text" placeholder="http://goo.g/maps...." name="google_map" class="form-control" value="{{restaurants.google_map}}">
			</div>
		</div>
		<div class="form-group row">
			<label for="rating">餐廳評分</label>
			<div class="col-sm-12">
				<input type="number" placeholder="總分5分(EX:4.5,3.8...)" name="rating" class="form-control" step="0.1" min="0" max="5" value="{{restaurants.rating}}">
			</div>
		</div>
		<div class="input-group row mb-3">
			<label for="description">餐廳簡介</label>
			<div class="col-sm-12">
				<textarea type="text" name="description" style="width: 400px;height:200px;"
					class="form-control">{{restaurants.description}}</textarea>
			</div>
		</div>
		<div class="button-group d-flex justify-content-center align-items-center">
			<button type="submit" class="btn btn-warning btn-lg">送出編輯</button>
				<a href="/">
					<button class="btn btn-secondary ml-4">返回首頁</button>
				</a>
		</div>
	</form>
</div>