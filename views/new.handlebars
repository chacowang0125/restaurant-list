<div class="container mx-auto p-4 d-flex flex-column justify-content-center align-items-center">
	<h2 class="text-center">新增餐廳</h2>
	<form action="/restaurants" method="POST" class="mt-3 text-center">
		<div class="form-group row">
			<label for="name">餐廳名稱</label>
			<div class="col-sm-12">
			<input type="text" placeholder="餐廳名稱" name="name" class="form-control">
			</div>
		</div>
		<div class="form-group row">
			<label for="name-en">餐廳英文名稱</label>
			<div class="col-sm-12">
			<input type="text" placeholder="餐廳英文名稱" name="name_en" class="form-control">
			</div>
		</div>
		<div class="form-group row">
			<label for="category">料理類別</label>
			<div class="col-sm-12">
			<select class="form-control" id="category" name="category">
				<option>美式</option>
				<option>義式餐廳</option>
				<option>日本料理</option>
				<option>中東料理</option>
				<option>酒吧</option>
				<option>咖啡</option>
			</select>
			</div>
		</div>
		<div class="form-group row">
			<label for="image">餐廳照片連結</label>
			<div class="col-sm-12">
			<input type="text" placeholder="http://..." name="image" class="form-control">
			</div>
		</div>
		<div class="form-group row">
			<label for="location">餐廳地址</label>
			<div class="col-sm-12">
			<input type="text" placeholder="台北市..." name="location" class="form-control">
			</div>
		</div>
		<div class="form-group row">
			<label for="phone">餐廳電話：</label>
			<div class="col-sm-12">
			<input type="text" placeholder="02 1234-5678" name="phone" class="form-control">
			</div>
		</div>
		<div class="form-group row">
			<label for="google_map">Google Map</label>
			<div class="col-sm-12">
			<input type="text" placeholder="http://goo.g/maps...." name="google_map" class="form-control">
			</div>
		</div>
		<div class="form-group row">
			<label for="rating">餐廳評分</label>
			<div class="col-sm-12">
			<input type="number" placeholder="總分5分(EX:4.5,3.8...)" name="rating" class="form-control" step="0.1" min="0" max="5">
			</div>
		</div>
		<div class="input-group row mb-3">
			<label for="description">餐廳簡介</label>
			<div class="col-sm-12">
			<textarea type="text" placeholder="請寫下餐廳的介紹..." name="description"rows="3" cols="40" class="form-control"></textarea>
			</div>
		</div>

		<button type="submit" class="btn btn-warning btn-lg mr-3">Create</button>

	</form>
</div>