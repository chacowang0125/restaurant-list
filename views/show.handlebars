<h1 class="mb-1 restaurant-show-title">{{restaurants.name}}</h1>
<div class="container">
	<div class="row">
		<div class="col-12 col-md-10 mx-auto">

			<p class="mb-1">
				<span class="text-secondary">
					<i class="fas fa-utensils pr-2"></i>
					類別：
				</span>
				{{restaurants.category}}
			</p>

			<p class="mb-1">
				<span class="text-secondary">
					<i class="fas fa-map-marker-alt pr-2"></i>
					地址：
				</span>
				{{restaurants.location}}
				<a href="{{restaurants.google_map}}" class="text-secondary" target="_blank">
					<i class="fas fa-location-arrow pr-2 fa-xs"></i>
				</a>
			</p>

			<p class="mb-1">
				<span class="text-secondary">
					<i class="fas fa-mobile-alt pr-2"></i>
					電話：
				</span>
					{{restaurants.phone}}
			</p>

			<p class="mb-5">
				{{restaurants.description}}
			</p>

			<img class="rounded mx-auto d-block mb-4 w-100"
				src="{{restaurants.image}}"
				style="max-width: 600px;">
		</div>
	</div>
	<div class="button-group text-center">
		<a href="">
		<button type="submit" class="btn btn-warning btn-lg mr-3 mb-3">編輯餐廳</button>
		</a>
		<a href="/">
			<button type="submit" class="btn btn-warning btn-lg mb-3">返回首頁</button>
		</a>
	</div>
</div>